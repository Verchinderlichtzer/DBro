@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider MaxWidth="MaxWidth.Large" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense>
        <MudContainer>
            <MudStack Row Spacing="0">
                <MudLink Class="mr-5" Href="/home" Underline="Underline.None">
                    <MudImage Src="images/logo_customer.png" Width="106" Height="40" ObjectFit="ObjectFit.Cover" />
                </MudLink>
                <MudButton Size="Size.Small" Href="/home" Color="Color.Inherit" Variant="Variant.Text" Class="@(relativePath.Search("home") ? "mud-chip-text bold px-6" : "px-6")">Home</MudButton>
                <MudButton Size="Size.Small" Href="/keranjang" Color="Color.Inherit" Variant="Variant.Text" Class="@(relativePath == "keranjang" ? "mud-chip-text bold px-6" : "px-6")">Keranjang</MudButton>
                <MudButton Size="Size.Small" Href="/daftar-keranjang" Color="Color.Inherit" Variant="Variant.Text" Class="@(relativePath.Search("daftar-keranjang") ? "mud-chip-text bold px-6" : "px-6")">Riwayat Pemesanan</MudButton>
                <MudSpacer />
                <MudMenu Dense ActivationEvent="MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
                    <ActivatorContent>
                        <MudButton Class="white-text">@CurrentUser.Nama</MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem Href="@($"/info-user/{CurrentUser.Email}")">Info User</MudMenuItem>
                        <MudMenuItem Href="/logout" ForceLoad>Logout</MudMenuItem>
                    </ChildContent>
                </MudMenu>
            </MudStack>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        <CascadingValue Value="this">
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>